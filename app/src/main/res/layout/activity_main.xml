<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"

    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textCapWords"
        android:id="@+id/namefield"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:text="Is a dolphin a mammal?"
        android:gravity="center"
        android:textColor="@android:color/black"



        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_marginLeft="82dp"
            android:id="@+id/test"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_marginLeft="82dp"
            android:id="@+id/test2"
            />



    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:elevation="2dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/shape"
        android:layout_marginTop="14dp"
        android:elevation="5dp"
        android:text="A ‘doe’ is what kind of animal?"
        android:gravity="center"
        android:textColor="@android:color/black"


        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A female dove"
            android:layout_marginLeft="82dp"
            android:id="@+id/test3"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A female bear"
            android:layout_marginLeft="82dp"
            android:id="@+id/test4"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A female deer"
            android:layout_marginLeft="82dp"
            android:id="@+id/test5"
            />


    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:elevation="2dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/shape"
        android:layout_marginTop="14dp"
        android:elevation="5dp"
        android:text="Bees are found on every continent of earth except for one, which is it?"
        android:gravity="center"
        android:textColor="@android:color/black"


        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Africa"
            android:layout_marginLeft="82dp"
            android:id="@+id/test6"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antarctica"
            android:layout_marginLeft="82dp"
            android:id="@+id/test7"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asia"
            android:layout_marginLeft="82dp"
            android:id="@+id/test8"
            />


    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:elevation="2dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/shape"
        android:layout_marginTop="14dp"
        android:elevation="5dp"
        android:text="What is the name of an adult female horse?"
        android:gravity="center"
        android:textColor="@android:color/black"


        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" A mare "
            android:layout_marginLeft="82dp"
            android:id="@+id/test9"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" A fare"
            android:layout_marginLeft="82dp"
            android:id="@+id/test10"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" A care"
            android:layout_marginLeft="82dp"
            android:id="@+id/test11"
            />


    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:elevation="2dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/shape"
        android:layout_marginTop="14dp"
        android:elevation="5dp"
        android:text="How many legs does a spider have?"
        android:gravity="center"
        android:textColor="@android:color/black"


        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_marginLeft="82dp"
            android:id="@+id/test12"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_marginLeft="82dp"
            android:id="@+id/test13"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_marginLeft="82dp"
            android:id="@+id/test14"
            />


    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:elevation="2dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/shape"
        android:layout_marginTop="14dp"
        android:elevation="5dp"
        android:text="Cats spend an average of 13 to 14 hours a day sleeping.?"
        android:gravity="center"
        android:textColor="@android:color/black"


        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="True"
            android:layout_marginLeft="82dp"
            android:id="@+id/test15"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="False"
            android:layout_marginLeft="82dp"
            android:id="@+id/test16"
            />



    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:elevation="2dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@drawable/shape"
        android:layout_marginTop="14dp"
        android:elevation="5dp"
        android:text="The crocodile species is believed to have been around for how long?"
        android:gravity="center"
        android:textColor="@android:color/black"


        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100 million years"
            android:layout_marginLeft="82dp"
            android:id="@+id/test17"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="205 million years"
            android:layout_marginLeft="82dp"
            android:id="@+id/test18"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200 million years"
            android:layout_marginLeft="82dp"
            android:id="@+id/test19"
            />



    </RadioGroup>








    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:id="@+id/summary_text_view"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="submit"
        android:layout_gravity="center_vertical|center_horizontal"
        />

</LinearLayout>


</ScrollView>